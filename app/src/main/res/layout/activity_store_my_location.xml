<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreMyLocationActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_add_location_light"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_add_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Your Address : "
        android:textColor="@color/mycolor1"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/address_text_view"
        app:layout_constraintEnd_toEndOf="@+id/use_my_location_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/use_my_location_btn"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text=""
        android:textColor="@color/mycolor1"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/use_my_location_btn"
        app:layout_constraintEnd_toEndOf="@+id/use_my_location_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/use_my_location_btn"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/mycolor1"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/use_my_location_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:targetApi="lollipop" />


    <Button
        android:id="@+id/use_my_location_btn"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="#65680D"
        android:drawableEnd="@drawable/ic_baseline_my_location"
        android:padding="10sp"
        android:text="find my location"
        app:backgroundTint="@color/mycolor1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>